<Window x:Class="Highscores.EnterHighscoreNameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Highscores"
        mc:Ignorable="d"
        Title="You did highscore!" Height="200" Width="300" Background="Gold" WindowStartupLocation="CenterOwner" ResizeMode="NoResize" Closed="Window_Closed">
    <StackPanel>
        <TextBlock HorizontalAlignment="Center" Text="Congratulations" FontSize="20" Margin="3" TextWrapping="NoWrap"/>
        <TextBlock x:Name="HighscoreText" TextAlignment="Center" HorizontalAlignment="Center" Margin="5" TextWrapping="NoWrap"/>
        <TextBox x:Name="NameBox" HorizontalAlignment="Center" HorizontalContentAlignment="Center" Text="" TextWrapping="NoWrap" Margin="5" VerticalAlignment="Top" Width="120" KeyDown="NameBox_KeyDown"/>
        <Button x:Name="SaveButton" Content="Save" HorizontalAlignment="Center" Width="50" Margin="5" Click="SaveButton_Click"/>

    </StackPanel>
</Window>
